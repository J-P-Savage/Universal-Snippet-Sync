{
  "name": "universalsnippetsync",
  "displayName": "Universal Snippet Sync",
  "description": "A utility to sync global UI elements across multiple HTML files. Replaces content between and comments with updated snippets",
  "version": "1.0.0",
  "icon": "icon.png",
  "author": "Joshua Savage",
  "publisher": "JoshuaSavage",
  "license" : "MIT",  
  "repository": {
    "type": "git",
    "url": "https://github.com/J-P-Savage/Universal-Snippet-Sync"
  },
  "engines": {
    "vscode": "^1.109.0"
  }, 
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "universalsnippetsync.runUpdate",
      "title": "Sync Snippet Across Files"
    }],
    "menus":{
      "explorer/context": [
        {
          "command": "universalsnippetsync.runUpdate",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
    "title": "Universal Snippet Sync",
    "properties": {
      "UniversalSnippetSync.snippetFile":{
        "type":"string",
        "default": "snippets/nav.html",
        "description": "Path to the file containing one snippet"
      },
      "UniversalSnippetSync.excludeFolders": {
        "type": "array",
        "items": {"type": "string"},
        "default": [".git"],
        "description": "Folders to skip during batch updates"
      }
    }
  }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }  
}
